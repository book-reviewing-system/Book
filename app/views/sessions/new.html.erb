<% provide(:title, "Log in") %>
<header><h1>Log in</h1></header>

<body>

 <div class="row"></div>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <h4><%= f.label :email %></h4>
      <h3><%= f.email_field :email, class: 'form-control' %></h3>

      <h4><%= f.label :password %></h4>
      <h3><%= f.password_field :password, class: 'form-control' %></h3>

      <p class="col-md-4 col-md-push-4"><%= f.submit "Log in", class: "btn btn-primary" %></p>
      </br></br>
    <% end %>
    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>

</div>
