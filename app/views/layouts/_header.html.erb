<header class="header-inverse ">
<div class="container-fluid">
  <nav class="navbar navbar-expand-lg navbar-dark bg-info">
    <div class="navbar-brand" >
        <%= link_to "BOOK REVIEW SYSTEM", root_path, id: "logo" %>
      </div>
  <button class="navbar-toggler navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="nav navbar-nav mr-auto">
      <%if current_user && current_user.admin? %>
        <li class="nav-item active">
          <%= link_to "Home Page", user_path(@current_user) %>
        </li>
        <li class="nav-item">
          <%= link_to "Books", root_path%>
        </li>
        <li class="nav-item">
          <%= link_to "Requests", requests_path %>
        </li>
        <li class="nav-item">
          <%= link_to "Users", users_path %>
        </li>
        <li class="nav-item">
          <%= link_to "Log out", logout_path, method: :delete %>
        </li>
        
      <% elsif logged_in? %>
        <li class="nav-item active">
          <%= link_to "Home Page", user_path(@current_user) %>
        </li>
        <li class="nav-item">
          <%= link_to "Books", root_path%>
        </li>
        <li class="nav-item">
          <%= link_to "Log out", logout_path, method: :delete %>
        </li>
      <% else %>

        <li class="nav-item active">
          <%= link_to "Books", root_path%>
        </li>
        <li class="nav-item">
          <%= link_to "Sign up", signup_path %>
        </li>
        <li class="nav-item">
          <%= link_to "Sign in",login_path %>
        </li>
      <% end %>
    </ul>
  </div>
</nav>
