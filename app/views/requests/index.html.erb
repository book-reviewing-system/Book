<p id="notice"><%= notice %></p>

<h1>Requests</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Book</th>
      <th>Created_at</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
     <% if @requests.blank? %>
     <h1>NO REQUEST </h1>
     <% else %>
      <% @requests.each do |request| %>
        <% book = request.book %>
        <% user = request.user %>
        <tr>
          <td><%= link_to user.name, user %></td>
          <td><%= link_to book.title, book %></td>
          <td><%= request.created_at.to_date %></td>
          <% if request.approved? %>
            <td>Yes   </td>
          <% elsif request.denied? %>
            <td>No   </td>
          <% else %>
            <td>Waiting   </td>
          <% end %>
          </td>
          <td><%= link_to 'Edit', edit_request_path(request) %></td>
        <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>    
    <% end %>
   <% end %>
  </tbody>
</table>

