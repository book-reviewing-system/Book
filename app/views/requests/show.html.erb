<p id="notice"><%= notice %></p>

<p>

  <strong>User:</strong>
  <%= @request.user_id %>
</p>

<p>
  <strong>Book:</strong>
  <%= @request.book_id %>
</p>

<p><strong>Status:</strong>
	<% if @request.approved? %>
            <td>Yes   </td>
          <% elsif @request.denied? %>
            <td>No   </td>
          <% else %>
            <td>Waiting   </td>
          <% end %>
</p>

